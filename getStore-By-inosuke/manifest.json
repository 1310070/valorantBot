{
  "manifest_version": 3,
  "name": "Riot Auth Cookie Exporter",
  "version": "0.1.0",
  "description": "Export auth.riotgames.com cookies to local app",
  "permissions": ["cookies", "storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://auth.riotgames.com/*",
    "https://*.riotgames.com/*",
    "http://127.0.0.1/*"
  ],
  "action": {
    "default_title": "Export Riot Cookies",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "sw.js"
  }
}
